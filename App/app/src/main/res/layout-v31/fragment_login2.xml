<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F4F4F4"
    android:clipToOutline="true">

    <View
        android:layout_width="240dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/login_title2" />

    <!-- Rectangle 1 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000000">

        <EditText
            android:id="@+id/rectangle_1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="312dp"
            android:background="@drawable/login_editbox_email"
            android:drawablePadding="16dp"
            android:hint="Email" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Rectangle 2 -->
    <EditText
        android:id="@+id/rectangle_2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/login_editbox_password"
        android:hint="    Password" />

    <!-- Rectangle 4 -->
    <CheckBox
        android:id="@+id/rectangle_4"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="473dp" />

    <TextView
        android:layout_width="113dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="472dp"
        android:gravity="top"
        android:text="로그인 정보 저장"
        android:textColor="#5F5F5F"
        android:textSize="16sp" />


    <Button
        android:id="@+id/rectangle_3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="521dp"
        android:background="@drawable/login_button_login"
        android:text="로그인" />

    <TextView
        android:id="@+id/login_forget"
        android:layout_width="140dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="596dp"
        android:gravity="top"
        android:text="아이디 · 비밀번호 찾기"
        android:textColor="#919191"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/login_signup"
        android:layout_width="57dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="307dp"
        android:layout_marginTop="596dp"
        android:gravity="top"
        android:text="회원가입"
        android:textColor="#919191"
        android:textSize="14sp" />


</RelativeLayout>



